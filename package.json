{
  "name": "mern-blog-app",
  "version": "1.0.0",
  "description": "Full-stack MERN blog application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "cd server && pnpm run dev",
    "client": "cd client && pnpm run dev",
    "build": "cd client && pnpm run build",
    "start": "cd server && pnpm start",
    "install-server": "cd server && pnpm install",
    "install-client": "cd client && pnpm install",
    "install-all": "pnpm run install-server && pnpm run install-client",
    "clean": "rm -rf node_modules && cd server && rm -rf node_modules && cd ../client && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "mern",
    "blog",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}